<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlumniMIPAULM" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bluePrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bluePrimaryVariant</item>
        <item name="colorPrimaryVariant">@color/brown</item>

<!--        <item name="colorAccent">@color/black</item>-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>


        <!-- Customize your theme here. -->
    </style>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorAccent">#fff</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/bluePrimary</item>
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/black</item>    <!--days of the week-->
    </style>
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="Theme.About" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/bluePrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bluePrimaryVariant</item>
