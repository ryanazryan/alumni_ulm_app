<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6BD2E1F6"
    tools:context=".pekerjaan.UpdatePekerjaanActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/include"
            layout="@layout/toolbar"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include">


            <TextView
                android:id="@+id/tvNamaInstansi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Instansi"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="7dp"
                android:textColor="@color/clearBlack"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_rounded"
                android:elevation="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:background="@color/white"
                    app:endIconMode="clear_text"
                    app:hintEnabled="false"
                    app:boxStrokeColor="@color/bluePrimary"
                    app:hintAnimationEnabled="true"
                    app:prefixTextColor="@color/bluePrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/namaInstansi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/bluePrimary"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:maxEms="4">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/tvNamaPekerjaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pekerjaan"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="7dp"
                android:textColor="@color/clearBlack"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/namaPekerjaan"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:elevation="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_rounded"
                android:elevation="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout12"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:background="@color/white"
                    app:endIconMode="clear_text"
                    app:hintEnabled="false"
                    app:boxStrokeColor="@color/bluePrimary"
                    app:hintAnimationEnabled="true"
                    app:prefixTextColor="@color/bluePrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pekerjaan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/bluePrimary"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:maxEms="4">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvBidang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bidang"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="7dp"
                android:textColor="@color/clearBlack"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/bidang"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:elevation="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvMulai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tahun Masuk"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="7dp"
                android:textColor="@color/clearBlack"
                android:textSize="15sp"
                android:textStyle="bold"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_rounded"
                android:elevation="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout4"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:background="@color/white"
                    app:endIconMode="clear_text"
                    app:boxStrokeColor="@color/bluePrimary"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="true"
                    app:prefixTextColor="@color/bluePrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tahunMulai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:maxEms="4">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvPenghasilan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Penghasilan/Bulan"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="7dp"
                android:textColor="@color/clearBlack"
                android:textSize="15sp"
                android:textStyle="bold"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/penghasilan"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:elevation="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tvNamaAtasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Atasan"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="7dp"
                android:textColor="@color/clearBlack"
                android:textSize="15sp"
                android:textStyle="bold"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_rounded"
                android:elevation="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:background="@color/white"
                    app:endIconMode="clear_text"
                    app:hintEnabled="false"
                    app:boxStrokeColor="@color/bluePrimary"
                    app:hintAnimationEnabled="true"
                    app:prefixTextColor="@color/bluePrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/namaAtasan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/bluePrimary"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:maxEms="4">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvHpAtasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HP Atasan"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="7dp"
                android:textColor="@color/clearBlack"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_rounded"
                android:elevation="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout51"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:background="@color/white"
                    app:endIconMode="clear_text"
                    app:hintEnabled="false"
                    app:prefixTextColor="@color/bluePrimary"
                    app:startIconTint="@color/bluePrimary"
                    app:boxStrokeColor="@color/bluePrimary"
                    app:hintAnimationEnabled="true"
                    app:startIconDrawable="@drawable/ic_phone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/hpAtasan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:maxEms="4"
                        android:padding="4dp">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvEmailAtasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Atasan"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="7dp"
                android:textColor="@color/clearBlack"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_rounded"
                android:elevation="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout5"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:background="@color/white"
                    app:endIconMode="clear_text"
                    app:hintEnabled="false"
                    app:prefixTextColor="@color/bluePrimary"
                    app:startIconTint="@color/bluePrimary"
                    app:boxStrokeColor="@color/bluePrimary"
                    app:hintAnimationEnabled="true"
                    app:startIconDrawable="@drawable/ic_email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailAtasan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:maxEms="4"
                        android:padding="4dp">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>



            <androidx.cardview.widget.CardView
                android:id="@+id/login_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/bluePrimaryVariant"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp">

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_white"
                    android:elevation="10dp"
                    android:ems="15"
                    android:text="Simpan"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>